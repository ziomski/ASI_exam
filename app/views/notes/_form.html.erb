<%= form_for(@note, :html => {:multipart => true}) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
  <div class="col-xs-6 col-md-4" id='priority'>
    <%= f.label :priority %><br>
    <%= f.select :priority, options_for_select([["Urgent", "a"], ["Quite urgent", "b"],["Not urgent", "c"]]),{},{ :class => 'form-control' }%><br>
  </div>
  <input type="hidden" name="note[checked]" value="false">
  </div>
  <div class="row">
  <div class="col-xs-6 col-md-4" id='photo'>
    <%= f.label :photo %><br>
    <%= f.file_field :photo %><br>
  </div>
  <div class="col-xs-6 col-md-4" id='title'>
    <%= f.label :title %><br>
    <%= f.text_field :title ,{ :class => 'form-control' } %>
  </div>
  </div>
   <div class="row">
    <div class="col-xs-6 col-md-4" id='photo'>
	<%= f.label :remote_photo_url, "or Photo URL" %><br>
    <%= f.text_field :remote_photo_url ,{ :class => 'form-control' }%><br>
  </div>
   </div>
    <div class="row">
    <div class="col-xs-12 col-md-8" id='description'>
    <%= f.label :description %><br>
    <%= f.text_area :description ,{ :class => 'form-control' }%><br>
  </div>
   </div>
   <div class="row">
    <div class="col-xs-6 col-md-4" id='email'>
    <%= f.check_box :confirm ,{ :class => 'form-control' }%><%= f.label :confirm, 'Send e-mail as remember?'%><br>
    <%= f.label :email %><br>
    <%= f.text_field :email ,{ :class => 'form-control', :disabled => 'true' }%><br>
  </div>
   </div>
    <div class="actions">
    <%= f.submit({ :class => 'btn btn-success' }) %>
	<button type="button" class="btn btn-primary" onclick="window.location.href='/notes'">Back</button>
	</div>
<% end %>
